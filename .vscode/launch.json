{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Fighter Server (nodemon)",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/fighter-first/server.js",
            "restart": true,
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}
